<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/item_chat_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_chat_user_email"
        app:layout_constraintStart_toEndOf="@+id/item_chat_user_image"
        app:layout_constraintTop_toTopOf="@+id/item_chat_user_image" />

    <TextView
        android:id="@+id/item_chat_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="6dp"
        android:text="이메일"
        android:textColor="#8A252525"
        app:layout_constraintBottom_toBottomOf="@+id/item_chat_user_image"
        app:layout_constraintStart_toEndOf="@+id/item_chat_user_image"
        app:layout_constraintTop_toBottomOf="@+id/chat_user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>
